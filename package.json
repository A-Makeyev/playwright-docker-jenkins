{
    "dependencies": {},
    "devDependencies": {
      "@playwright/test": "^1.55.0",
      "@types/node": "^24.3.0",
      "allure-commandline": "^2.34.1",
      "allure-playwright": "^3.3.3"
    },
    "scripts": {
      "test": "bunx playwright test --reporter=line,allure-playwright,junit --output=test-results",
      "test:ui": "bunx playwright test tests/ui --reporter=line,allure-playwright,junit --output=test-results/ui",
      "test:api": "bunx playwright test tests/api --reporter=line,allure-playwright,junit --output=test-results/api",
      "test:chrome": "bunx playwright test --project=chromium --reporter=line,allure-playwright,junit --output=test-results/chrome",
      "report:generate": "bunx allure generate allure-results --clean -o allure-report",
      "report:open": "bunx allure open allure-report"
    }
}